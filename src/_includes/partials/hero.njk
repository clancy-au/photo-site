<section class="hero">
  <div class="hero-aspect">
    <div class="hero-track">
      {% for img in heroImages %}
      <div class="hero-slide">
        <img 
          src="/images/hero/{{ img }}" 
          srcset="/images/hero/{{ img }} 2000w, 
                 /images/hero/responsive/{{ img | replace('.jpg', '') }}-1600w.jpg 1600w,
                 /images/hero/responsive/{{ img | replace('.jpg', '') }}-1200w.jpg 1200w,
                 /images/hero/responsive/{{ img | replace('.jpg', '') }}-800w.jpg 800w,
                 /images/hero/responsive/{{ img | replace('.jpg', '') }}-400w.jpg 400w"
          sizes="100vw"
          loading="lazy" 
          alt="">
      </div>
      {% endfor %}
    </div>
  </div>
</section>
<script>
(function(){
  const slides = document.querySelectorAll('.hero-slide'); let i=0;
  function show(n){ slides.forEach((s,k)=>s.classList.toggle('active',k===n)); }
  show(0); setInterval(()=>{ i=(i+1)%slides.length; show(i); }, 6000);
})();
</script>
